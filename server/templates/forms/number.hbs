<div class="form-group {{#if error}}has-error has-feedback{{/if}}">
  <label for="{{fieldId}}">{{t fieldName}} {{#unless field.allowNull}}*{{/unless}}</label>
  <input id="{{fieldId}}" name="{{name}}" type="number" class="form-control" placeholder="{{t placeholder}}"  {{fieldAttrs}}  value="{{value}}">
  {{{field-help-error error}}}
</div>